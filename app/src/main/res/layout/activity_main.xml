<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/ivImg"
            android:scaleType="fitCenter"
            android:src="@drawable/zdychava"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <ImageButton
            android:id="@+id/ibSelectImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_photo_library_white_24dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:visibility="visible"/>


    <eu.sisik.pixelproc.histo.HistogramView
            android:id="@+id/histoView"
            android:padding="10dp"
            android:background="@color/bgTransparentGrey"
            android:layout_width="270dp"
            android:layout_height="170dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
    />

</android.support.constraint.ConstraintLayout>